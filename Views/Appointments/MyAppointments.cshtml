@model IEnumerable<FitnessApp.Models.Appointment>

<h2>Randevularım</h2>

<!-- Uyarılar -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Hizmet</th>
            <th>Eğitmen</th>
            <th>Salon</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Durum</th>
            <th>İşlem</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var a in Model)
        {
            // Randevu zamanını hesapla
            var ts = TimeSpan.Parse(a.Time);
            var appointmentDateTime = a.Date.ToDateTime(new TimeOnly(ts.Hours, ts.Minutes));

            bool isPast = appointmentDateTime < DateTime.Now;

            // İptal kuralları
            bool canCancel =
                (!a.IsApproved && !isPast) ||
                (a.IsApproved && (appointmentDateTime - DateTime.Now).TotalHours >= 8);

            <tr class="@((isPast ? "table-danger" : ""))">
                <td>@a.Service?.Name</td>
                <td>@a.Trainer?.Name</td>
                <td>@a.Gym?.Name</td>
                <td>@a.Date</td>
                <td>@a.Time</td>

                <td>
                    @if (isPast)
                    {
                        <span class="badge bg-secondary">Geçmiş</span>
                    }
                    else if (a.IsApproved)
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Bekliyor</span>
                    }
                </td>

                <td>
                    @if (canCancel)
                    {
                        <a asp-action="Cancel" asp-route-id="@a.Id"
                           class="btn btn-danger btn-sm">İptal Et</a>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>Henüz randevunuz yok.</p>
}
