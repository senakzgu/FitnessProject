<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessApp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">FitnessApp</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- SOL MENÜ (Rol bazlı) -->
                    <ul class="navbar-nav flex-grow-1">

                        @* Admin menüsü *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Trainers" asp-action="Index">Trainers</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Services" asp-action="Index">Services</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Gyms" asp-action="Index">Gyms</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Appointments" asp-action="Index">Appointments</a>
                            </li>
                        }

                        @* Üye menüsü *@
                        @if (User.IsInRole("Uye"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Appointments" asp-action="Create">
                                    Randevu Al
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Appointments" asp-action="MyAppointments">
                                    Randevularım
                                </a>
                            </li>
                        }

                    </ul>

                    <!-- SAĞ TARAFTAKİ OTURUM MENÜSÜ -->
                    <ul class="navbar-nav ms-auto">

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">Merhaba, @User.Identity.Name</span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
                                    Çıkış Yap
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    Giriş Yap
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    Kayıt Ol
                                </a>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FitnessApp -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
